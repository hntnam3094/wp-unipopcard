extends ../include/_template.pug
include ../include/_mixin

block content
    +body('', 'nav1', './')
        section.category.pt-50.pb-50 
            .wraper
                h1.ttl_main.fz-40.text-up CRAFT COLLECTION 
                .heading
                    h2.ttl_sub.fz-31.text-up.mt-40 Your SEPTEMBER CRAFT COLLECTION
                    .text 
                        p See a project you want to make? <a href='#'>Become a member</a> to unlock this month’s collection and start crafting your favorites. When the month is up, you’ll get a new craft collection — and you can still access these projects anytime.
                .tab_category.mt-30 
                    .row 
                        .col-12.col-md-6.col-lg-3.item   
                            a.active(href="") PAPER FLOWERS 
                        each item in ['FELT & FIBER','SEASONAL','SVG CUT FILES']
                            .col-12.col-md-6.col-lg-3.item 
                                a(href="#")= item
                .course_main.mt-10 
                    .row 
                        .col-6.col-md-4.col-lg-3 
                            a(href="detail.html").item.mt-20 
                                .imgDrop 
                                    img(src="common/images/product2.png", alt="") 
                        each item in [1,2,3,4,5,6,7]
                            .col-6.col-md-4.col-lg-3 
                                a(href="detail.html").item.mt-20.block 
                                    .imgDrop 
                                        img(src="common/images/product2.png", alt="") 
                    .mt-30.text-center 
                        a.btn_more(href="") 
                            span.block.fz-31 JOIN NOW
                            span.block.sub To Unlock ALL Collection Projects!

                .couse_intro.mt-40
                    .heading
                        h2.ttl_sub.fz-31.text-up September SVG CUT FILES & PRINTABLES
                        .text 
                            p These designs are only available until the end of the month. <a href='#'>Become a member</a> to download them today!
                    .course_main.mt-10 
                        .row 
                            .col-4.col-md-3.col-lg-2 
                                a(href="detail.html").item.mt-20 
                                    .imgDrop 
                                        img(src="common/images/product3.png", alt="") 
                            each item in [1,2,3,4,5,6,7]
                                .col-4.col-md-3.col-lg-2 
                                    a(href="detail.html").item.mt-20.block 
                                        .imgDrop 
                                            img(src="common/images/product3.png", alt="") 
                        .mt-30.text-center 
                            a.btn_more(href="") 
                                span.block.fz-31 JOIN NOW
                                span.block.sub To Unlock ALL Collection Projects!
                .key_bonus.mt-40
                    .heading
                        h2.ttl_sub.fz-31.text-up YWEEKLY BONUS
                        .text 
                            p Every week we post a free project that you can download anytime and share with others!
                    .course_main.mt-10 
                        .row
                            each item in [1,2,3,4,5,6]
                                .col-4.col-md-3.col-lg-2 
                                    a(href="#").item.mt-20
                                        .imgDrop 
                                            img(src="common/images/product4.png", alt="") 
            
